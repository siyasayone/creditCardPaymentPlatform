package com.creditCardPayment.spring.security.postgresql.dto.customerCreditCard;

import java.util.List;

import javax.validation.Valid;

import com.creditCardPayment.spring.security.postgresql.dto.statement.StatementRemainderDTO;

import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

@Data
@AllArgsConstructor
@NoArgsConstructor
public class CardDTO {
	
	@Valid
	private List<CustomerCardDTO> customerCardDetailsDTO;
	
	private String customerName;
	
	private String email;
	
	private Long creditLimit;
	
	private Long availableCredit;
	
	private List<StatementRemainderDTO> statementRemainderDTO;
	

}
