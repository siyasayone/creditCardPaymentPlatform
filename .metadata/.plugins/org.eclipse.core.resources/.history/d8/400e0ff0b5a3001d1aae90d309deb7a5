package com.example.creditCardPayment.repository.customer;

import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import com.creditCardPayment.spring.security.postgresql.entity.customer.Role;
import com.creditCardPayment.spring.security.postgresql.models.ERole;


@Repository
public interface RoleRepository extends JpaRepository<Role, Long> {

	Optional<Role> findByName(ERole name);

}
